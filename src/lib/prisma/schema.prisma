generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  role     Role      @relation(fields: [roleId], references: [id])
  roleId   Int
  userInfo UserInfo?

  @@map("prisma_users")
}

model UserInfo {
  id        Int     @id @default(autoincrement())
  address   String
  phone     String  @db.VarChar(20)
  birthYear Int
  name      String?

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  @@map("prisma_user_infos")
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  permissions Permission[]
  users       User[]

  @@map("prisma_roles")
}

model Permission {
  id   Int            @id @default(autoincrement())
  name String
  type PermissionType

  roles Role[]

  @@unique([name, type])
  @@index([type])
  @@map("prisma_permissions")
}

enum PermissionType {
  UI
  API
}
